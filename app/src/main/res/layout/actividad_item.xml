<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp">

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp">

        <ImageView
                android:layout_alignParentEnd="true"
                android:layout_width="387dp"
                android:layout_height="348dp" tools:srcCompat="@tools:sample/backgrounds/scenic[0]"
                android:id="@+id/image_fondo_actividad" app:srcCompat="@drawable/ic_menu_gallery"
                android:layout_marginEnd="0dp"/>
        <TextView
                android:id="@+id/text_view_priority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@id/image_fondo_actividad"
                android:text="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"/>


        <TextView
                android:id="@+id/text_view_titulo_actividad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignBottom="@id/image_fondo_actividad"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Título Actividad"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

        <TextView
                android:id="@+id/text_view_descripcion_actividad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view_titulo_actividad"
                android:text="Descriptción Actividad"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>