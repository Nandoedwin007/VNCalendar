<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AgregarActividad">

    <EditText
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:id="@+id/edit_text_titulo_actividad"
            android:hint="Título Actividad"
            app:layout_constraintHorizontal_bias="0.511" android:textAlignment="center"/>
    <EditText
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_titulo_actividad"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:id="@+id/edit_text_descripción_actividad"
            android:hint="Descripción Actividad"
            android:textAlignment="center"/>

    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioGroup_tipos_actividad"
            android:checkedButton="@+id/sound"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_descripción_actividad"
            app:layout_constraintStart_toEndOf="@+id/imageButton_grabar_audio" android:layout_marginStart="8dp">

        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/deporte"
                android:text="Deporte"/>
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/estudio"
                android:text="Estudio"/>


    </RadioGroup>

    <ImageButton
            android:layout_width="74dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_height="85dp" app:srcCompat="@drawable/grabar_audio"
            android:id="@+id/imageButton_grabar_audio" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_descripción_actividad" android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
    />

    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/imageButton_grabar_audio"
            android:id="@+id/radioGroup_tipos_vibracion"
            android:checkedButton="@+id/sound" android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp">

        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/vibracion_larga"
                android:text="Vibración Larga"/>
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/vibracion_corta"
                android:text="Vibración Corta"/>


    </RadioGroup>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_my_calendar"
            android:id="@+id/button_pickdate"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/radioGroup_tipos_vibracion" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.173" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup_tipos_actividad"/>
    <Button
            android:text="Guardar Actividad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_guardar_actividad" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup_tipos_vibracion"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/radioGroup_tipos_vibracion" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.271"/>
    <Button
            android:text="Regresar a Actividades"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_regresar_a_actividades" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button_guardar_actividad"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/radioGroup_tipos_vibracion" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prioridad:"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup_tipos_vibracion"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:id="@+id/textView2" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/button_guardar_actividad"
            app:layout_constraintHorizontal_bias="0.121"/>
    <NumberPicker
            android:id="@+id/number_picker_priority"
            android:layout_width="wrap_content"
            android:layout_height="112dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/button_guardar_actividad"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.087" android:layout_marginTop="4dp"/>
    <TextView
            android:text="Tipo de Actividad:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintBottom_toTopOf="@+id/radioGroup_tipos_actividad"
            app:layout_constraintStart_toStartOf="@+id/radioGroup_tipos_actividad"/>
    <TextView
            android:text="Tipo de Vibración:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" app:layout_constraintStart_toStartOf="@+id/radioGroup_tipos_vibracion"
            app:layout_constraintBottom_toTopOf="@+id/radioGroup_tipos_vibracion" android:layout_marginBottom="4dp"/>
    <TextView
            android:text="Date:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textDate" app:layout_constraintStart_toEndOf="@+id/button_pickdate"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.113" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup_tipos_actividad"/>
    <TextView
            android:text="Time:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="257dp" android:id="@+id/textTime" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textDate"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myDateYear" app:layout_constraintStart_toEndOf="@+id/textDate"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/textDate" app:layout_constraintHorizontal_bias="0.171"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myTimeHour" app:layout_constraintStart_toEndOf="@+id/textTime"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.171" app:layout_constraintTop_toTopOf="@+id/textTime"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myTimeMinute" app:layout_constraintStart_toEndOf="@+id/myTimeHour"
            android:layout_marginStart="12dp" android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/myTimeHour" app:layout_constraintVertical_bias="1.0"
            app:layout_constraintTop_toTopOf="@+id/myTimeHour" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.342"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myDateWeek" app:layout_constraintStart_toEndOf="@+id/myDateYear"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.095"
            app:layout_constraintTop_toTopOf="@+id/myDateYear"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myDateDay" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
            app:layout_constraintTop_toTopOf="@+id/myDateYear"/>
</androidx.constraintlayout.widget.ConstraintLayout>