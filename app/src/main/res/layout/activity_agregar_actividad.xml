<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AgregarActividad">

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:id="@+id/textInput_titulo_aactividad">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Título Actividad"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/textInput_titulo_aactividad"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:id="@+id/textInput_descripción_actividad">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Descripción Actividad"/>
    </com.google.android.material.textfield.TextInputLayout>
    <ImageButton
            android:layout_width="148dp"
            android:layout_height="85dp" app:srcCompat="@drawable/ic_menu_gallery"
            android:id="@+id/imageButton_seleccionar_imagen" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/textInput_descripción_actividad"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="40dp"/>
    <ImageButton
            android:layout_width="74dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_height="85dp" app:srcCompat="@drawable/grabar_audio"
            android:id="@+id/imageButton_grabar_audio" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/textInput_descripción_actividad" android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/imageButton_seleccionar_imagen"/>

    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/imageButton_grabar_audio"
            android:id="@+id/radioGroup_tipos_vibracion"
            android:checkedButton="@+id/sound" android:layout_marginTop="25dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="40dp">

        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/vibracion_larga"
                android:text="Vibración Larga"/>
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/vibracion_corta"
                android:text="Vibración Corta"/>


    </RadioGroup>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_my_calendar"
            android:id="@+id/imageButton3" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/imageButton_seleccionar_imagen"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/radioGroup_tipos_vibracion" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.532"/>
    <Button
            android:text="Agregar Nueva Actividad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_agregar_actividad" android:layout_marginTop="96dp"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup_tipos_vibracion"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.501"/>
    <Button
            android:text="Regresar a Actividades"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_regresar_a_actividades" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button_agregar_actividad"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>